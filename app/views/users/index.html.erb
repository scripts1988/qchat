<h2>Find new friends</h2>

<% if @users.empty? %>
  <div class="alert alert-danger">No users exist in system</div>
<% end %>

<table class="table table-striped">
  <thead class="thead thead-default">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.email %></td>
        <td><%= link_to "Add friend", friendships_path(user_id: current_user.id, friend_id: item.id), method: "post"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

